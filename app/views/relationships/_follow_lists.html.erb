<div class = "container px-5 px-sm-0">
  <div class = "row">
  
      <% if users.exists? %>
        <% users.each do |user| %>
          <table class = "table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
                <th colspan="3"></th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.followings.count %></td>
                <td>フォロワー数: <%= user.followers.count %></td>
                <td><%= link_to "Show", user_path(user) %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
  </div>
</div>