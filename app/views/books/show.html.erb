<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render 'list', book: Book.new, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag @book.user.get_profile_image(100,100) %>
                <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :delete do %>
                      ♥<%= @book.favorites.count %>
                    <% end %>
                  </p>
                <% else %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :post do %>
                      ♡<%= @book.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
              </td>
              <td>コメント件数：<%= @book.book_comments.count %></td>

              <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_92220" %></td>
                <td><%= link_to "Destroy", book_path, method: :delete, class:"btn btn-sm btn-danger destroy_book_92220" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <h6>【コメント】</h6>
        <div>
          <% @book.book_comments.each do |book_comment| %>
              <%= image_tag book_comment.user.get_profile_image(100,100) %>
              <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment), method: :delete, class:"btn btn-sm btn-danger destroy_book_92220" %>
              <% end %>
            <p><%= link_to current_user.name, user_path(current_user.id) %></p>
          <% end %>
        </div>
        <div>
          <%= form_with model: [@book, @book_comment] do |f| %>
            <%= f.text_area :comment, class:"form-control book_comment" %>
            <p><%= f.submit "送信" %></p>
          <% end %>
        </div>
    </div>
  </div>
</div>